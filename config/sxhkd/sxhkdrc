XF86AudioMute
	volume toggle; exec pkill -SIGRTMIN+10 i3blocks
XF86AudioLowerVolume
	volume down; exec pkill -SIGRTMIN+10 i3blocks
XF86AudioRaiseVolume
	volume up; exec pkill -SIGRTMIN+10 i3blocks
XF86MonBrightnessDown
	light -U 5; exec pkill -SIGRTMIN+10 i3blocks
XF86MonBrightnessUp
	light -A 5; exec pkill -SIGRTMIN+10 i3blocks
