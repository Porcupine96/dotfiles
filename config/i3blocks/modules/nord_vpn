#!/bin/sh

locked_label=ğŸ”’
unlocked_label=ğŸ”“

nordvpn status | awk '
/^Status:/ {
    status=$2
}
/^City:/ {
    city=$2
}
END {
    if (status == "Disconnected") {
        print "ğŸ”“ Disconnected\n"
        print "#FF0000"
    } else {
        printf("ğŸ”’ %s\n", city)
        print "#00FF00"
    }
}
'
