#!/bin/bash


declare -a options=(
  "Monorepo Pull Requests"
  "Herochat Stage"
  "Chatbotize Jenkins"
  "Chatbotize Stage"
  "Jira Chatbotize Board"
  "GitLab Activity"
  "GitLab Merge Requests"
)


function to_url() {
  case "$1" in
    "Monorepo Pull Requests") echo "https://github.com/chatbotizeteam/monorepo/pulls" ;;
    "Herochat Stage")         echo "--incognito https://at-herochat.test.codeheroes.tech/0fecdde7f2964ec79aa7cfbfd8e9e499" ;;
    "Chatbotize Jenkins")     echo "https://jenkins.codeheroes.tech/blue/organizations/jenkins/monorepo/activity" ;;
    "Chatbotize Stage")       echo "https://creator-chatbotize.stage.codeheroes.tech" ;;
    "GitLab Activity")        echo "https://gitlab.com/dashboard/activity" ;;
    "GitLab Merge Requests")  echo "https://gitlab.com/dashboard/merge_requests?author_username=Porcupine96" ;;
    "Jira Chatbotize Board")  echo "https://codeheroesdev.atlassian.net/secure/RapidBoard.jspa?rapidView=18&projectKey=CP&view=planning" ;;
  esac
}


choice=$(printf "%s\n" "${options[@]}" | rofi -i -dmenu -dpi 196 -show-icons -font "Fira Mono 11")

if [[ ! -z "$choice" ]]; then
  url=$(to_url "$choice")

  bash -c "brave-browser $url; (true)" >> /dev/null 2>&1
fi
